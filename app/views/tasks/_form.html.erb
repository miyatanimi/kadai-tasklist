<%= form_for(task) do |f| %>
  <!-- Error messages start -->
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Error messages end -->
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.submit '送信' %>
<% end %>